---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="login-page">
    <div class="login-container">
      <img src="/assets/DTT-logo-White.png" alt="DTT Logo" class="login-logo" />
      <h2 class="section-title">Admin Login</h2>
      <form id="login-form">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" required />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required />
        </div>
        <button type="submit" class="cta-button">Login</button>
        <p id="error-message" class="error-message"></p>
      </form>
      <a href="/" class="back-link">‚Üê Kembali ke Halaman Utama</a>
    </div>
  </main>
</Layout>

<script is:inline>
  const form = document.getElementById("login-form");
  const errorMessage = document.getElementById("error-message");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    errorMessage.textContent = "";
    const formData = new FormData(form);

    try {
      const response = await fetch("/api/login", {
        method: "POST",
        body: formData,
      });

      if (response.ok) {
        window.location.href = "/admin"; // Alihkan ke admin jika berhasil
      } else {
        const errorText = await response.text();
        errorMessage.textContent = errorText;
      }
    } catch (error) {
      errorMessage.textContent = "Tidak bisa terhubung ke server.";
    }
  });
</script>
