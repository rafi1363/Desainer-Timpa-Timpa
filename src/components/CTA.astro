<!-- CTA Section -->
<section class="cta-section">
  <h3>Jangan Cuma Nonton. Ayo Ikut Nimpa!</h3>
  <p>
    Tunjukkan karyamu, dapatkan masukan jujur, dan lihat seberapa cepat skill-mu
    berkembang. DTT adalah tempatnya para desainer yang serius untuk jadi lebih
    baik, bukan sekadar memuji.
  </p>
  <div class="cta-buttons">
    <button class="cta-button">Gabung komunitas</button>
    <a href="/daftar" class="secondary-button">Ayo Daftar Sekarang!</a>
  </div>
</section>

<!-- modal div -->

<div id="join-modal" class="modal">
  <div class="modal-content">
    <span class="close-modal-button">&times;</span>
    <h2>Bergabung dengan Komunitas DTT!</h2>
    <p>
      Pilih platform di bawah ini untuk bergabung dengan ribuan desainer
      lainnya, berkolaborasi, dan tingkatkan skill Anda bersama kami.
    </p>
    <div class="modal-actions">
      <a href="https://discord.gg/FwDBBNyh" class="cta-button modal-button"
        >Join Discord</a
      >
      <a
        href="https://www.instagram.com/dtt.studio?igsh=MW43Zjh6YjZ1bnBicA=="
        class="secondary-button modal-button">Follow Instagram</a
      >
    </div>
  </div>
</div>

<script is:inline>
  // Perintah untuk "menunggu semua perabotan siap"
  document.addEventListener("DOMContentLoaded", function () {
    // Logika untuk Modal Gabung Komunitas
    const ctaSection = document.querySelector(".cta-section");
    // Kita cari tombol spesifik di dalam section ini
    const openModalButton = ctaSection
      ? ctaSection.querySelector(".cta-button")
      : null;

    // Elemen modal berada di luar section, jadi kita cari di seluruh dokumen
    const modal = document.getElementById("join-modal");
    const closeModalButton = modal
      ? modal.querySelector(".close-modal-button")
      : null;

    if (modal && openModalButton && closeModalButton) {
      const openModal = () => modal.classList.add("active");
      const closeModal = () => modal.classList.remove("active");

      openModalButton.addEventListener("click", (e) => {
        e.preventDefault();
        openModal();
      });

      closeModalButton.addEventListener("click", closeModal);
      modal.addEventListener("click", (e) => {
        if (e.target === modal) closeModal();
      });
    }
  });
</script>
